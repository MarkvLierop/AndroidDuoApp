<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/ivPicPlace"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvNamePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivPicPlace"
        android:paddingBottom="2dp"
        android:text="TextView"
        android:textStyle="bold" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/rbRatingPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="4"
        android:paddingBottom="2dp"
        android:layout_below="@+id/tvNamePlace"
        android:layout_toEndOf="@+id/ivPicPlace" />

    <TextView
        android:id="@+id/tvOpeningTimePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingBottom="2dp"
        android:layout_below="@+id/rbRatingPlace"
        android:layout_toEndOf="@+id/ivPicPlace" />

    <TextView
        android:id="@+id/tvDistancePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tvOpeningTimePlace"
        android:layout_toEndOf="@+id/ivPicPlace" />


</RelativeLayout>